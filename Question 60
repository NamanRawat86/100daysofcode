/* Q60 (Arrays (1D))
Count positive, negative, and zero elements in an array.
*/
#include <stdio.h>
int main() {
    int n, i, p=0, neg=0, z=0;
    scanf("%d", &n);
    int arr[n];
    for(i=0; i<n; i++) {
        scanf("%d", &arr[i]);
        if(arr[i] > 0) p++;
        else if(arr[i] < 0) neg++;
        else z++;
    }
    printf("Pos=%d, Neg=%d, Zero=%d", p, neg, z);
    return 0;
}
