/* Q9: Program to calculate Simple and Compound Interest for given Principal, Rate, and Time */
#include <stdio.h>
#include <math.h>
    int main() 
{
    int principal, rate, time;
    double simple_interest, compound_interest;
    printf("Enter principal amount: ");
    scanf("%d", &principal);
    printf("Enter rate of interest: ");
    scanf("%d", &rate);
    printf("Enter time (in years): ");
    scanf("%d", &time);
    simple_interest = (principal * rate * time) / 100.0;
    compound_interest = principal * pow((1 + rate / 100.0), time) - principal;
    printf("Simple Interest = %.2lf\n", simple_interest);
    printf("Compound Interest = %.2lf\n", compound_interest);
    return 0;
}
