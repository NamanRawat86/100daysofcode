/* Q83 (Strings)
Count vowels and consonants in a string.
*/
#include <stdio.h>
#include <ctype.h>
int main() {
    char s[100];
    int v=0, c=0, i=0;
    scanf("%s", s);
    while(s[i] != '\0') {
        char ch = tolower(s[i]);
        if(ch>='a' && ch<='z') {
            if(ch=='a' || ch=='e' || ch=='i' || ch=='o' || ch=='u') v++;
            else c++;
        }
        i++;
    }
    printf("Vowels=%d, Consonants=%d", v, c);
    return 0;
}
