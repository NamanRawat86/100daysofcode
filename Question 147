/* Q147 (Enum)
Store employee data in a binary file using fwrite() and read using fread().
*/
#include <stdio.h>
struct Data { int val; };
int main() {
    struct Data d1 = {55}, d2;
    FILE *fp = fopen("data.bin", "wb+");
    if(!fp) return 1;
    fwrite(&d1, sizeof(d1), 1, fp);
    rewind(fp);
    fread(&d2, sizeof(d2), 1, fp);
    printf("Read: %d", d2.val);
    fclose(fp);
    return 0;
}
