/* Q103 (Logic Enhancers)
Calculate the pivot index of an array.
*/
#include <stdio.h>
int main() {
    int n, i, totalSum=0, leftSum=0;
    scanf("%d", &n);
    int arr[n];
    for(i=0; i<n; i++) {
        scanf("%d", &arr[i]);
        totalSum += arr[i];
    }
    for(i=0; i<n; i++) {
        if(leftSum == totalSum - leftSum - arr[i]) {
            printf("%d", i);
            return 0;
        }
        leftSum += arr[i];
    }
    printf("-1");
    return 0;
}
