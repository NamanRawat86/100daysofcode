/* Q120 (File Handling)
Write a program to take a string input. Change it to sentence case.
*/
#include <stdio.h>
#include <ctype.h>
int main() {
    char s[200];
    int i=0;
    fgets(s, 200, stdin);
    s[0] = toupper(s[0]);
    while(s[i] != '\0') {
        if(s[i] == ' ' && s[i+1] != '\0') {
            s[i+1] = toupper(s[i+1]);
        }
        i++;
    }
    printf("%s", s);
    return 0;
}
