/* Q104 (Logic Enhancers)
Find the pivot integer x such that sum(1 to x) equals sum(x to n).
*/
#include <stdio.h>
#include <math.h>
int main() {
    int n;
    scanf("%d", &n);
    int total = (n * (n + 1)) / 2;
    int root = (int)sqrt(total);
    if(root * root == total) printf("%d", root);
    else printf("-1");
    return 0;
}
