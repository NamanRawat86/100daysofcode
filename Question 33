/* Q33: Write a program to check if a number is an Armstrong number. */

#include <stdio.h>
#include <math.h>

int main()
{
    int n, original, remainder, result = 0, digits = 0, temp;

    printf("Enter a number: ");
    scanf("%d", &n);

    original = n;
    temp = n;

    while(temp != 0)
    {
        temp = temp / 10;
        digits++;
    }

    temp = n;

    while(temp != 0)
    {
        remainder = temp % 10;
        result = result + pow(remainder, digits);
        temp = temp / 10;
    }

    if(result == original)
        printf("Armstrong\n");
    else
        printf("Not Armstrong\n");

    return 0;
}
