/* Q129 (File Handling)
Read integers from file, compute sum and average.
*/
#include <stdio.h>
int main() {
    FILE *fp = fopen("numbers.txt", "r");
    int num, sum=0, count=0;
    if(fp == NULL) return 1;
    while(fscanf(fp, "%d", &num) != EOF) {
        sum += num;
        count++;
    }
    printf("Sum: %d, Avg: %.2f", sum, (float)sum/count);
    fclose(fp);
    return 0;
}
