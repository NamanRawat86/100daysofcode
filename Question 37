/* Q37: Write a program to find the LCM of two numbers. */

#include <stdio.h>

int main()
{
    int a, b, num1, num2, hcf, lcm;

    printf("Enter two numbers: ");
    scanf("%d %d", &a, &b);

    num1 = a;
    num2 = b;

    while(a != b)
    {
        if(a > b)
            a = a - b;
        else
            b = b - a;
    }

    hcf = a;
    lcm = (num1 * num2) / hcf;

    printf("LCM = %d\n", lcm);

    return 0;
}
