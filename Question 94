/* Q94 (Strings)
Find the longest word in a sentence.
*/
#include <stdio.h>
#include <string.h>
int main() {
    char s[200], longest[50]="", current[50]="";
    int i=0, j=0;
    fgets(s, 200, stdin);
    while(s[i] != '\0') {
        if(s[i]!=' ' && s[i]!='\n') {
            current[j++] = s[i];
            current[j] = '\0';
        } else {
            if(strlen(current) > strlen(longest)) {
                strcpy(longest, current);
            }
            j = 0;
        }
        i++;
    }
    if(strlen(current) > strlen(longest)) strcpy(longest, current);
    printf("%s", longest);
    return 0;
}
