/* Q98 (Strings)
Print initials of a name with the surname displayed in full.
*/
#include <stdio.h>
#include <string.h>
#include <ctype.h>
int main() {
    char s[100];
    int i, lastSpace=-1, len;
    fgets(s, 100, stdin);
    len = strlen(s);
    if(s[len-1]=='\n') s[len-1] = '\0';
    for(i=0; s[i]!='\0'; i++) {
        if(s[i] == ' ') lastSpace = i;
    }
    printf("%c.", toupper(s[0]));
    for(i=1; i<lastSpace; i++) {
        if(s[i] == ' ') printf("%c.", toupper(s[i+1]));
    }
    printf(" %s", &s[lastSpace+1]);
    return 0;
}
