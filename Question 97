/* Q97 (Strings)
Print the initials of a name.
*/
#include <stdio.h>
#include <ctype.h>
int main() {
    char s[100];
    int i=0;
    fgets(s, 100, stdin);
    printf("%c", toupper(s[0]));
    while(s[i] != '\0') {
        if(s[i]==' ' && s[i+1]!='\0') {
            printf("%c", toupper(s[i+1]));
        }
        i++;
    }
    return 0;
}
